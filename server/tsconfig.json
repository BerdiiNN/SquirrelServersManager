{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types/"
    ]
  },
  "include": ["./**/*.d.ts","src//*.ts", "src//*.json",
    "../.env", ".eslintrc.json", "typings.d.ts"]
}
